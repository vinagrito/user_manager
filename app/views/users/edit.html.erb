<h1>Editing user</h1>

<%= form_for @user do |f| %>

	<table id='editUserTable'>
		<%= f.hidden_field :id%>
		<tr>
			<th><%= f.label :username%>	</th>
			<td><%= f.text_field :username %></td>	
		</tr>
		<tr>
			<th><%= f.label :email%></th>
			<td><%= f.text_field :email %></td>	
		</tr>		
		<tr>
			<th><%= f.label :name%></th>
			<td><%= f.text_field :name %></td>	
		</tr>
		<tr>
			<th><%= f.label :lastname%></th>
			<td><%= f.text_field :lastname %></td>	
		</tr>
		<tr>
			<th><%= label_tag :roles%></th>
			<td><%= select(:user,:roles,Role.find(:all).collect {|r| [r.role_name, r.id]},{:selected => @user.roles.collect {|r| r.id}},:multiple => true) %></td>	
		</tr>
		<tr>
			<th><%= f.label :password%></th>
			<td><%= f.password_field :password%></td>
		</tr>  
		<tr>   
			<th><%= f.label :password_confirmation%></th>
			<td><%= f.password_field :password_confirmation%></td>
		</tr>
	<table>
 	
 Â <%= f.submit %>
<% end %>
<p><%= link_to "Back to users list",users_path%></p>










